    <div class="container">
        <div class="row">
            <div class="col">
                <form id="update-movie-form">
  <div class="mb-3">

    <input type="text" class="form-control" id="movie-title" value="{{movie}}">
  </div>

  </div>
  <input type="hidden" id="movie-id" value="{{id}}" />
  <button type="submit" class="btn btn-primary">Update Movie</button>
</form>
            </div>
        </div>
    </div>

    <script type="text/javascript">
    $(document).ready(function() {
        $("update-movie-form").on("submit", function(e){
            e.preventDefault();
            const movieTitle = $("#movie-title").val();
            const movieId = $("#movie-id").val();
            
            $.ajax(`/api/movies/${movieId}`, {
                type: "PUT", data: {
                    movie: movieTitle
                }
            }).then(response => {
                alert("Movie successfully updated!");
                window.location.href = "/";

            })
        })
    });
        </script>