<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Movie</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col">
                <form id="new-movie-form">
  <div class="mb-3">

    <input type="text" class="form-control" id="movie-title">
  </div>

  </div>
  <button type="submit" class="btn btn-primary">Add Movie to Watch List</button>
</form>
            </div>
        </div>
    </div>

    <script type="text/javascript">
    $(document).ready(function() {
        $("new-movie-form").on("submit", function(e){
            e.preventDefault();
            const movieTitle = $("#movie-title").val();
            $.ajax("/api/movies", {
                type: "POST", data: {
                    movie: movieTitle
                }
            }).then(response => {
                alert("Movie successfully added!");
                location.redirect("/");

            })
        })
    });
        </script>
</body>
</html>